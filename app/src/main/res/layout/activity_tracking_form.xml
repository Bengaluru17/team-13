<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tracking_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vibha.kshamataapp.trackingActivityForm">

    <TextView
        android:text="Activity Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:id="@+id/activityName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/activityText"
        android:layout_alignBaseline="@+id/activityName"
        android:layout_alignBottom="@+id/activityName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="30dp" />

    <TextView
        android:text="Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/endDateText"
        android:layout_marginTop="30dp"
        android:id="@+id/location" />

    <TextView
        android:text="Start Date(YYYY/MM/DD)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startDate"
        android:layout_above="@+id/endDate"
        android:layout_toLeftOf="@+id/purposeText"
        android:layout_toStartOf="@+id/purposeText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/endDateText"
        android:layout_alignTop="@+id/endDate"
        android:layout_toRightOf="@+id/endDate"
        android:layout_toEndOf="@+id/endDate"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="32dp"
        android:id="@+id/startDateText"
        android:layout_below="@+id/activityText"
        android:layout_toRightOf="@+id/endDate"
        android:layout_toEndOf="@+id/endDate" />

    <TextView
        android:text="End Date(YYYY/MM/DD)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:id="@+id/endDate"
        android:layout_below="@+id/startDateText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Purpose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/purpose"
        android:layout_below="@+id/locationText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:layout_alignRight="@+id/location"
        android:layout_alignEnd="@+id/location" />

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activityFormNext"
        android:onClick="onclickActivityForm"
        android:layout_marginBottom="21dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/endDateText"
        android:layout_alignStart="@+id/endDateText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/purposeText"
        android:layout_alignTop="@+id/purpose"
        android:layout_alignLeft="@+id/locationText"
        android:layout_alignStart="@+id/locationText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/locationText"
        android:layout_alignTop="@+id/location"
        android:layout_alignLeft="@+id/activityText"
        android:layout_alignStart="@+id/activityText" />

</RelativeLayout>
